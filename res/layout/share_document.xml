<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:gravity="center">
	<TextView android:id="@+id/share_title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="24dp"
		android:textStyle="bold" android:textColor="@android:color/white"
		android:text="Share Document" android:gravity="center" android:layout_marginBottom="15dp"/>
	<TextView android:id="@+id/share_message" android:gravity="center"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="15dp" android:text="Please approach to the other NFC handset." />
</LinearLayout>
